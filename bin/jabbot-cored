#!/usr/bin/env perl
use v5.18;
use FindBin;
use lib "$FindBin::Bin/../lib";

our $VERSION = "0.1";

use Jabbot;
use Mojo::Server::Morbo;

my $config = Jabbot->config->{cored};
my $morbo = Mojo::Server::Morbo->new;
$morbo->daemon->listen([ $config->{listen} ]);
$morbo->watch([
    "config",
    "lib/Jabbot/Core.pm",
    "lib/Jabbot/Back/Core.pm",
    "lib/Jabbot/Plugin/"
]);
$morbo->run("lib/Jabbot/Back/Core.pm");
