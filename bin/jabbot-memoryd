#!/usr/bin/env perl
use v5.18;
use FindBin;
use lib "$FindBin::Bin/../lib";

use Jabbot;
use Mojo::Server::Morbo;

my $config = Jabbot->config->{memoryd};
my $hostport = ( $config->{host} // "localhost" ) . ":" . ( $config->{port} // 18002 );

my $morbo = Mojo::Server::Morbo->new;
$morbo->daemon->listen([ "http://". $hostport ]);
$morbo->run("lib/Jabbot/Back/Memory.pm");
