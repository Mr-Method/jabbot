#!/usr/bin/env perl
use common::sense;
use FindBin;
use lib "$FindBin::Bin/../lib";

$ENV{JABBOT_ROOT} = "$FindBin::Bin/..";

use UNIVERSAL::require;

my $class = 'Jabbot::Core';
$class->require;

my $j = $class->new;
my $q = join(" ", @ARGV);
my $ans = $j->answers(question => $q);

say "\nanswers:";
say "  $_->{plugin}: $_->{content}" for @$ans;
