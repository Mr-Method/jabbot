#!/usr/bin/env perl
use v5.18;
use JSON::PP qw(encode_json);
use Hijk;
use URI;

use FindBin;
use lib "$FindBin::Bin/../lib";

use Jabbot;
use Jabbot::Remote;
use Getopt::Long;

GetOptions(
    (my $opt = {}),
    "chat_id=n",
    "text=s"
);

my $remote = Jabbot::Remote->new( target => "telegram" );
my $res = $remote->post($opt);

if ($res->{error}) {
    say $res->{error};
} else {
    say "OK";
}
